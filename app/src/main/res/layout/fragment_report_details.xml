<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="report"
            type="com.ffm.db.room.entity.Report" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@color/colorDivider">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_2sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view_bg"
                android:padding="@dimen/_5sdp"
                android:text="Customer"
                android:textColor="@color/colorPrimaryBg"
                android:textSize="@dimen/_14ssp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_2sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hyper TecLab"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/company_name"
                    android:gravity="center_vertical"
                    android:text="Hari Narayan"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_14ssp" />

                <ImageView
                    android:id="@+id/img_call"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_call" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:elevation="@dimen/_2sdp">

            <TextView
                android:id="@+id/job_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view_bg"
                android:padding="@dimen/_5sdp"
                android:text="Job Details"
                android:textColor="@color/colorPrimaryBg"
                android:textSize="@dimen/_14ssp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_2sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:id="@+id/job_type_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Type"
                    android:textColor="@color/colorPrimaryTextDark"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/job_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_type_header"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:text="Bank Verification"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/job_date_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_type"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Date Time"
                    android:textColor="@color/colorPrimaryTextDark"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/job_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_date_header"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="28/01/2019 12:20 pm"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/location_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_date"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:text="Location"
                    android:textColor="@color/colorPrimaryTextDark"
                    android:textSize="@dimen/_14ssp" />

                <ImageView
                    android:id="@+id/img_location1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_below="@+id/location_header"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/location" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancel"
                        style="@style/button_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:text="Decline"
                        android:textAllCaps="false"
                        app:cornerRadius="@dimen/_20sdp"
                        app:rippleColor="@color/colorAccent"
                        android:layout_margin="@dimen/_2sdp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ok"
                        style="@style/button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryBg"
                        app:cornerRadius="@dimen/_20sdp"
                        app:rippleColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>