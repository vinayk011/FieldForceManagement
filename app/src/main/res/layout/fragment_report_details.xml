<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="report"
            type="com.ffm.db.room.entity.Report" />

        <variable
            name="updateListener"
            type="com.ffm.listener.UpdateJobListener" />
        <variable
            name="image"
            type="android.graphics.Bitmap" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDivider"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_2sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view_bg"
                android:padding="@dimen/_5sdp"
                android:text="Customer"
                android:textColor="@color/colorPrimaryBg"
                android:textSize="@dimen/_14ssp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hyper TecLab"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/company_name"
                        android:gravity="center_vertical"
                        android:text="Hari Narayan"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_14ssp" />
                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/img_call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:backgroundTint="@color/colorPrimaryBg"
                    android:clickable="true"
                    android:elevation="@dimen/_2sdp"
                    android:src="@drawable/ic_call"
                    app:borderWidth="0dp"
                    app:rippleColor="@color/colorPrimary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--  <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_4sdp"
              android:elevation="@dimen/_2sdp">

              <TextView
                  android:id="@+id/job_header"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/text_view_bg"
                  android:padding="@dimen/_5sdp"
                  android:text="Job Details"
                  android:textColor="@color/colorPrimaryBg"
                  android:textSize="@dimen/_14ssp" />
          </androidx.cardview.widget.CardView>-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_2sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">

                <TextView
                    android:id="@+id/report_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/text_view_bg"
                    android:padding="@dimen/_3sdp"
                    android:text="Job Assigned"
                    android:textColor="@color/colorPrimaryBg"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/job_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report_type"
                    android:gravity="center_vertical"
                    android:text="19 Jan, Saturday 8:00 Am - 10:00 AM"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/job_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_date"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Bank Verification"
                    android:textColor="@color/colorPrimaryTextDark"
                    android:textSize="@dimen/_10ssp" />


                <TextView
                    android:id="@+id/job_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/job_type"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/job_type"
                    android:text="- Personal loan"
                    android:textColor="@color/colorPrimaryTextDark"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/job_type"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_customer_response"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@color/colorDivider"
                        android:drawableBottom="@drawable/ic_action_addnote"
                        android:elevation="@dimen/_2sdp"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Add Customer Response"
                        android:textColor="@color/colorPrimaryTextDark"
                        android:onClick="@{() -> updateListener.onAddCustomerResponse()}"
                        android:textSize="@dimen/_10ssp" />


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/upload_image"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/icon"
                            android:scaleType="fitCenter"
                            app:image_big="@{image}"/>

                        <TextView
                            android:id="@+id/close"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/icon"
                            android:drawableStart="@drawable/ic_close"
                            android:padding="@dimen/_3sdp"
                            android:textSize="@dimen/_15ssp"
                            android:visibility="@{image != null ? View.VISIBLE : View.GONE}"/>

                        <TextView
                            android:id="@+id/photo_hint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/scan_square"
                            android:gravity="center"
                            android:text="@string/tap_to_take_photo"
                            android:onClick="@{() -> updateListener.onClickEditPhoto()}"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="@{image != null ? View.GONE : View.VISIBLE}"/>

                    </FrameLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancel"
                        style="@style/button_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:text="Decline"
                        android:textAllCaps="false"
                        app:cornerRadius="@dimen/_20sdp"
                        app:rippleColor="@color/colorAccent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ok"
                        style="@style/button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:text="Accept"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryBg"
                        app:cornerRadius="@dimen/_20sdp"
                        app:rippleColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>